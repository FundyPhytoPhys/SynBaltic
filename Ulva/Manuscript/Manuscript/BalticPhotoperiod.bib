  author = {{Klepacz-Sm{\'o}{\l}ka}, Anna and Pietrzyk, Damian and Szel{\k a}g, Rafa{\l} and G{\l}uszcz, Pawe{\l} and Daroch, Maurycy and Tang, Jie and Ledakowicz, Stanis{\l}aw},
