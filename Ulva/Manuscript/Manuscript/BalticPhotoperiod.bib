@article{mackeyPhysiologicalProteomicCharacterization2017,
  title = {Physiological and Proteomic Characterization of Light Adaptations in Marine {{Synechococcus}}},
  author = {Mackey, Katherine R. M. and Post, Anton F. and McIlvin, Matthew R. and Saito, Mak A.},
