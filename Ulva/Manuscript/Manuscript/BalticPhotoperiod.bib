@article{joliHypometabolismSurviveLong2024,
  title = {Hypometabolism to Survive the Long Polar Night and Subsequent Successful Return to Light in the Diatom {{Fragilariopsis}} Cylindrus},
  author = {Joli, Nathalie and Concia, Lorenzo and Mocaer, Karel and Guterman, Julie and Laude, Juliette and Guerin, Sebastien and Sciandra, Theo and Bruyant, Flavienne and {Ait-Mohamed}, Ouardia and Beguin, Marine and Forget, Marie-Helene and Bourbousse, Clara and Lacour, Thomas and Bailleul, Benjamin and Nef, Charlotte and Savoie, Mireille and Tremblay, Jean-Eric and Campbell, Douglas A. and Lavaud, Johann and Schwab, Yannick and Babin, Marcel and Bowler, Chris},
  year = {2024},
