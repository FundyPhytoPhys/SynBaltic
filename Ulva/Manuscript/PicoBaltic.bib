@article{nedbalPhotobioreactorSystemPrecision2008,
  title = {A Photobioreactor System for Precision Cultivation of Photoautotrophic Microorganisms and for High-Content Analysis of Suspension Dynamics},
  author = {Nedbal, Ladislav and Trt{\'i}lek, Martin and {\v C}erven{\'y}, Jan and Kom{\'a}rek, Ond{\v r}ej and Pakrasi, Himadri B.},
