@article{moejesSystemswideUnderstandingPhotosynthetic2017,
  title = {A Systems-Wide Understanding of Photosynthetic Acclimation in Algae and Higher Plants},
  author = {Moejes, Fiona Wanjiku and Matuszy{\'n}ska, Anna and Adhikari, Kailash and Bassi, Roberto and Cariti, Federica and Cogne, Guillaume and Dikaios, Ioannis and Falciatore, Angela and Finazzi, Giovanni and Flori, Serena and {Goldschmidt-Clermont}, Michel and Magni, Stefano and Maguire, Julie and Le Monnier, Adeline and M{\"u}ller, Kathrin and Poolman, Mark and Singh, Dipali and Spelberg, Stephanie and Stella, Giulio Rocco and Succurro, Antonella and Taddei, Lucilla and Urbain, Brieuc and Villanova, Valeria and Zabke, Claudia and Ebenh{\"o}h, Oliver},
