@article{stompTimescalePhenotypicPlasticity2008,
  title = {The {{Timescale}} of {{Phenotypic Plasticity}} and {{Its Impact}} on {{Competition}} in {{Fluctuating Environments}}.},
  author = {Stomp, Maayke and {van Dijk}, Mark~A. and {van Overzee}, Harri{\"e}t~M.~J. and Wortel, Meike~T. and Sigon, Corrien~A.~M. and Egas, Martijn and Hoogveld, Hans and Gons, Herman~J. and Huisman, Jef},
  year = {2008},
