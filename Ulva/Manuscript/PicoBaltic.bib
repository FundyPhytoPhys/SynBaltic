@article{luimstraBlueLightReduces2018,
  title = {Blue Light Reduces Photosynthetic Efficiency of Cyanobacteria through an Imbalance between Photosystems {{I}} and {{II}}},
  author = {Luimstra, Veerle M. and Schuurmans, J. Merijn and Verschoor, Antonie M. and Hellingwerf, Klaas J. and Huisman, Jef and Matthijs, Hans C. P.},
  year = {2018},
