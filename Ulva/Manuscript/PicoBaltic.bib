  author = {Alamsjah, Mochammad Amin and Hirao, Shotaro and Ishibashi, Fumito and Oda, Tatsuya and Fujita, Yuji},
  editor = {Borowitzka, Michael A. and Critchley, Alan T. and Kraan, Stefan and Peters, Akira and Sj{\o}tun, Kjersti and Notoya, Masahiro},
  year = {2009},
