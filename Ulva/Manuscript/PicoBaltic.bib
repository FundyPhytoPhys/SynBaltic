@article{efimovaInfluenceLightDifferent2020,
  title = {The {{Influence}} of {{Light}} of {{Different Spectral Qualities}} on the {{Photosynthetic Characteristics}} of {{C-Phycocyanine-Containing Cyanobacteria Synechococcus}} Sp. {{WH5701}}},
