@article{joliHypometabolismSurviveLong2024,
  title = {Hypometabolism to Survive the Long Polar Night and Subsequent Successful Return to Light in the Diatom {{Fragilariopsis}} Cylindrus},
  author = {Joli, Nathalie and Concia, Lorenzo and Mocaer, Karel and Guterman, Julie and Laude, Juliette and Guerin, Sebastien and Sciandra, Theo and Bruyant, Flavienne and {Ait-Mohamed}, Ouardia and Beguin, Marine and Forget, Marie-Helene and Bourbousse, Clara and Lacour, Thomas and Bailleul, Benjamin and Nef, Charlotte and Savoie, Mireille and Tremblay, Jean-Eric and Campbell, Douglas A. and Lavaud, Johann and Schwab, Yannick and Babin, Marcel and Bowler, Chris},
  year = {2024},
  journal = {New Phytologist},
  volume = {241},
  number = {5},
  pages = {2193--2208},
  issn = {1469-8137},
  doi = {10.1111/nph.19387},
  urldate = {2024-04-02},
  abstract = {Diatoms, the main eukaryotic phytoplankton of the polar marine regions, are essential for the maintenance of food chains specific to Arctic and Antarctic ecosystems, and are experiencing major disturbances under current climate change. As such, it is fundamental to understand the physiological mechanisms and associated molecular basis of their endurance during the long polar night. Here, using the polar diatom Fragilariopsis cylindrus, we report an integrative analysis combining transcriptomic, microscopic and biochemical approaches to shed light on the strategies used to survive the polar night. We reveal that in prolonged darkness, diatom cells enter a state of quiescence with reduced metabolic and transcriptional activity, during which no cell division occurs. We propose that minimal energy is provided by respiration and degradation of protein, carbohydrate and lipid stores and that homeostasis is maintained by autophagy in prolonged darkness. We also report internal structural changes that manifest the morphological acclimation of cells to darkness, including the appearance of a large vacuole. Our results further show that immediately following a return to light, diatom cells are able to use photoprotective mechanisms and rapidly resume photosynthesis, demonstrating the remarkable robustness of polar diatoms to prolonged darkness at low temperature.},
  langid = {english},
  keywords = {autophagy,diatom,energy homeostasis,Fragilariopsis cylindrus,polar night,quiescence}
}

