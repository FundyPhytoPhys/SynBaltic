@article{garcia-sanchezLivingCoastalLagoon2014,
  title = {Living in a Coastal Lagoon Environment: {{Photosynthetic}} and Biochemical Mechanisms of Key Marine Macroalgae},
  shorttitle = {Living in a Coastal Lagoon Environment},
  author = {{Garc{\'i}a-S{\'a}nchez}, Marta and Korbee, Nathalie and {P{\'e}rez-Ruzafa}, Isabel Mar{\'i}a and Marcos, Concepci{\'o}n and Figueroa, F{\'e}lix L. and {P{\'e}rez-Ruzafa}, {\'A}ngel},
  year = {2014},
